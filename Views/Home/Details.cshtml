@model Todolist.Models.Task

@{
    ViewData["Title"] = "Task Details";
}

<div class="container">
    <h2 class="mt-4 mb-4" style="color:white;">Task Details</h2>
    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-black">Title:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext">@Model.Title</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-black">Description:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext">@Model.Description</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-black">Priority:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext">@Model.Priority</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-black">Create Date:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext">@Model.StartDate.ToString("MM/dd/yyyy")</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-black">Expire Date:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext">@Model.EndDate.ToString("MM/dd/yyyy")</p>
                </div>
            </div>
            <div class="text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
